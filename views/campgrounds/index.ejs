<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div id="camp-index-jumbotron" class="container">
			<h1>
				Welcome to yelpCamp
			</h1>	
			<p>
				Add your recent camping experience!
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="campgrounds/new">Add Camp</a>

			</p>
		</div>
	</header>
	<div class="row" style="display: flex; flex-wrap: wrap;text-align: center;">
			<% campgrounds.forEach(function(camp) { %>
				<div class="col-md-3 col-sm-6">
					<div class="card" style="width: 16rem;">
					  <img class="card-img-top" src="<%= camp.img %>">
					  <div class="card-body">
						<h5 class="card-title"><%= camp.name %></h5>
						<p class="card-text"></p>
						<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
					  </div>
					</div>
				</div>
			<% }); %>
	</div>
</div>

<%- include("../partials/footer") %>
