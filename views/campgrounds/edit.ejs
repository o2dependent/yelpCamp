<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">
		Edit <%= camp.name %>
	</h1>
	<div class="row">
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="camp[price]" min="0.01" step="0.01" value="<%= camp.price %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[img]" value="<%= camp.img %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">Back to camps</a>
		</div>
	</div>
</div>


<%- include("../partials/footer") %>
