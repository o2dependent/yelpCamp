<%- include("../partials/header") %>
<div class="container">
	<h1 style="text-align: center;">
		New camp create
	</h1>
	<div class="row">
		<div class="basic-form">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camp[name]" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="camp[price]" min="0.01" step="0.01" placeholder="Price">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[img]" placeholder="Img">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[description]" placeholder="Description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">Back to camps</a>

		</div>
		
	</div>
	
</div>


<%- include("../partials/footer") %>
